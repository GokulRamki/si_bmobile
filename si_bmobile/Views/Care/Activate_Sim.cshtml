@model si_bmobile.Models.ActiveSimModel

@{
    ViewBag.Title = "Activate_Sim";
    Layout = "~/Views/Shared/bm_Layout_Care.cshtml";
}

<h2>Activate SIM</h2>

<div class="sim_pan">
    <div id="success_msg_box" class="alert-message success" style="display:none;">
            <div class="box-icon"></div>
            <p>SIM activated successfully<a href="#" class="close">&times;</a>
          </div>

    <div class="div-pan">
        <div class="div-header">
            <div class="div-img">
                <img id="img_sim_info" class="img-holder" src="~/Images/minus_icon_20x20.png" alt="Minus" />
            </div>
            <div class="div-txt">
                <span class="stitle">Activate a New SIM</span>
            </div>
        </div>
        <div id="div_sim_info" class="div-context">
            <div class="div-tr">&nbsp;</div>
            <div class="div-tr" style="width:500px;">
            <div class="div-tr" style="width:500px;">
                <div class="editor-label" style="width:195px;">
                    MSIDN Number&nbsp;<a onclick="DisplaySimImg('msdn_no');" href="#">View</a>:
                </div>
                <div class="editor-field" style="width:295px;">
                    @Html.TextBoxFor(m => m.msidn_number, new { @maxlength = "15", @autocomplete = "off" })
                    <div><span id="spanMSISDNNo" style="color:red;"></span></div>
                </div>
            </div>
            <div class="div-tr" style="width:500px;">
                <div class="editor-label" style="width:195px;">
                    SIM Number&nbsp;<a onclick="DisplaySimImg('sim_no');" href="#">View</a>:
                </div>
                <div class="editor-field" style="width:295px;">
                     @Html.TextBoxFor(m => m.sim_number, new { @maxlength = "24", @autocomplete = "off" })
                    <div><span id="spanSIMNo" style="color:red;"></span></div>
                </div>
            </div>
            <div class="div-tr" style="width:500px;">
                <div class="editor-label" style="width:195px;">
                    PUK1 Code&nbsp;<a onclick="DisplaySimImg('puk_no');" href="#">View</a>:
                </div>
                <div class="editor-field" style="width:295px;">
                     @Html.TextBoxFor(m => m.puk_code, new { @autocomplete = "off" })
                    <div><span id="spanPUKCode" style="color:red;"></span></div>
                </div>
            </div>
            <div id="div_verify_process" class="div-tr" style="text-align:center; display:none; width:500px;">                               
                <img src="~/Content/themes/base/images/loading.gif" />&nbsp;please wait...            
            </div>
            <div class="div-tr" style="width:500px;">
                <div class="editor-label" style="width:195px;">
                   &nbsp;
                </div>
                <div class="editor-field" style="width:295px;">
                    <input id="btnVerify_sim" type="button" value="Check Number" />
                </div>
            </div>   
                </div>
            <div style="width:290px; float:right;">
                <img id="sim_img" src="~/images/sim_demo/sim.jpg" style="max-width:290px; display:none;" alt="sim info" />
            </div>
            <div class="div-tr">&nbsp;</div>
        </div>
    </div>

    <div class="div-br">&nbsp;</div>
    <div class="div-pan">
        <div class="div-header act">
            <div class="div-img">
                <img id="img_sim_contact" class="img-holder" src="~/Images/plus_icon_20x20.png" alt="Minus" />
            </div>
            <div class="div-txt">
                <span class="stitle">Enter your personal details</span>
            </div>
        </div>
        <div id="div_sim_contact" class="div-context" style="display:none;">
            <div class="div-tr">&nbsp;</div>
            <div class="div-tr">
                <div class="editor-label">
                   SIM Number:
                </div>
                <div class="editor-field">
                    <span id="span_sim_number" style="color:black; font-weight:bold;"></span>                  
                    @Html.HiddenFor(m => m.ref_number)                   
                </div>
            </div>
            <div class="div-tr">
                <div class="editor-label">
                   First Name:
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.first_name)     
                    <div><span id="spanFName" style="color:red;"></span></div>              
                </div>
            </div>
            <div class="div-tr">
                <div class="editor-label">
                    Last Name:
                </div>
                <div class="editor-field">
                      @Html.TextBoxFor(m => m.last_name) 
                    <div><span id="spanLName" style="color:red;"></span></div>
                </div>
            </div>
            <div class="div-tr">
                <div class="editor-label">
                    E-mail:
                </div>
                <div class="editor-field">
                     @Html.TextBoxFor(m => m.email)
                    <div><span id="spanEmail" style="color:red;"></span></div> 
                </div>
            </div>
             <div class="div-tr">
                <div class="editor-label">
                    Driving License Number:
                </div>
                <div class="editor-field">
                     @Html.TextBoxFor(m => m.driving_lic) 
                </div>
            </div>
            <div class="div-tr">
                <div class="editor-label">
                    Address1:
                </div>
                <div class="editor-field">
                     @Html.TextBoxFor(m => m.address1) 
                    <div><span id="spanAddress1" style="color:red;"></span></div>
                </div>
            </div>
             <div class="div-tr">
                <div class="editor-label">
                    Address2:
                </div>
                <div class="editor-field">
                     @Html.TextBoxFor(m => m.address2) 
                </div>
            </div>
            <div id="div_active_process" class="div-tr" style="text-align:center; display:none;">                               
                <img src="~/Content/themes/base/images/loading.gif" />&nbsp;please wait...            
            </div>
            <div class="div-tr">
                <div class="editor-label">
                   &nbsp;
                </div>
                <div class="editor-field">
                    <input id="btnActive_sim" type="button" value="Submit" />
                </div>
            </div>   
            <div class="div-tr">&nbsp;</div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/active-sim-script.js")" type="text/javascript"></script>

     <script type="text/javascript">
         $(function () {
             $(".alert-message").delegate("a.close", "click", function (event) {
                 event.preventDefault();
                 $(this).closest(".alert-message").fadeOut(function (event) {
                     $(this).hide();
                 });
             });
         });
    </script>
}