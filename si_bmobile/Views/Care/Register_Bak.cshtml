@model si_bmobile.Models.RegistrationModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/bm_Layout_Care.cshtml";
}

<div class="mid_margin">
    <div class="choose_box remov_padd wrapper">       
        <section class="content-wrapper content-pan clear-fix">
            <section id="widget-grid" style="margin: 50px auto;">
                <!-- START ROW -->
                <div class="row">
                    <!-- NEW COL START -->
                    <article class="col-sm-12 col-md-12 col-lg-8" style="float:none; margin: 5px auto; max-width:500px;">

                        <!-- Widget ID (each widget will need unique ID)-->
                        <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false">
                            <header>
                                <span class="widget-icon"><i class="fa fa-user"></i></span>
                                <h2>Registration </h2>
                            </header>
                            <!-- widget div-->
                            <div>
                                <!-- widget edit box -->
                                <div class="jarviswidget-editbox">
                                    <!-- This area used as dropdown edit box -->
                                </div>
                                <!-- end widget edit box -->

                                <!-- widget content -->
                                <div class="widget-body no-padding">
                                    @using (Html.BeginForm("Register", "Care", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmReg", @class = "smart-form", novalidate = "novalidate" }))
                                    {	    
                                        @Html.AntiForgeryToken()                             
                           
                                        @*if (ViewBag.Message != null)
                                        {
                                        <fieldset>
                                            <div class="alert alert-warning fade in">
                                                <button class="close" data-dismiss="alert">
                                                    ×
                                                </button>
                                                <i class="fa-fw fa fa-warning"></i>
                                                <strong>Warning</strong> @ViewBag.Message
                                            </div>
                                        </fieldset>
                                        }*@                     
                                        <fieldset>
                                            <section>
                                                <b>E-mail:&nbsp;</b>
                                                <label for="Email" class="input">
                                                    @Html.TextBoxFor(model => model.Email, new { placeholder = "E-mail" })
                                                    @Html.ValidationMessageFor(model => model.Email)
                                                </label>
                                            </section>

                                            <section>
                                                <b>First Name:&nbsp;</b>
                                                <label for="FirstName" class="input">
                                                    @Html.TextBoxFor(model => model.FirstName, new { placeholder = "First Name"})
                                                    @Html.ValidationMessageFor(model => model.FirstName)
                                                </label>
                                            </section> 
                                            
                                              <section>
                                                <b>Middle Name:&nbsp;</b>
                                                <label for="MiddleName" class="input">
                                                    @Html.TextBoxFor(model => model.MiddleName, new { placeholder = "Middle Name" })
                                                    @Html.ValidationMessageFor(model => model.MiddleName)
                                                </label>
                                            </section>  
                                            
                                              <section>
                                                <b>Last Name:&nbsp;</b>
                                                <label for="LastName" class="input">
                                                    @Html.TextBoxFor(model => model.LastName, new { placeholder = "Last Name" })
                                                    @Html.ValidationMessageFor(model => model.LastName)
                                                </label>
                                            </section>  
                                             <section>
                                                <b>Company Name:&nbsp;</b>
                                                <label for="Company" class="input">
                                                    @Html.TextBoxFor(model => model.Company, new { placeholder = "Company Name" })
                                                    @Html.ValidationMessageFor(model => model.Company)
                                                </label>
                                            </section>    
                                             <section>
                                                <b>Address Line 1:&nbsp;</b>
                                                <label for="address1" class="input">
                                                    @Html.TextBoxFor(model => model.Address1, new { placeholder = "Address Line 1" })
                                                    @Html.ValidationMessageFor(model => model.Address1)
                                                </label>
                                            </section>    
                                             <section>
                                                <b>Address Line 2:&nbsp;</b>
                                                <label for="address2" class="input">
                                                    @Html.TextBoxFor(model => model.Address2, new { placeholder = "Address Line 2" })
                                                    @Html.ValidationMessageFor(model => model.Address2)
                                                </label>
                                            </section> 
                                             <section>
                                                <b>Mobile Number:&nbsp;</b>
                                                <label for="address2" class="input">
                                                    @Html.TextBoxFor(model => model.BroadBandNo,new { placeholder = "Mobile Number",maxlength="15" })
                                                    @Html.ValidationMessageFor(model => model.BroadBandNo)
                                                </label>
                                            </section>                                              
                                        </fieldset>  
                                        <footer>
                                            <button id="btnSubmit" class="btn btn-mini top_btn" type="submit" >Submit</button>
                                            <p>
                                                By registering you have agreed to the&nbsp;<a href="http://www.bmobile.com.sb/Home/TermsConditions" target="_blank">Terms & Conditions</a>
                                            </p>
                                        </footer>
                                    }
                                </div>
                                <!-- end widget content -->
                            </div>
                            <!-- end widget div -->
                        </div>
                        <!-- end widget -->
                    </article>
                    <!-- END COL -->
                </div>
                <!-- END ROW -->
            </section>
        </section>  
    </div>   
</div>

 <div id="div_dialog" style="display: none;">
            <p>@ViewBag.Message</p>
        </div>
@if (ViewBag.Message != null)
{ 
    <script type="text/javascript">
        $("#div_dialog").dialog({
            title: "Message",
            buttons: {
                Close: function () {
                    $(this).dialog('close');
                    var url = "@Url.Action(ViewBag.rdAction, "Care")";
                    window.location = url;
                }
            },
            width: 300,           
            closeOnEscape: false,
            draggable: false,
            resizable: false,
            modal: true
        });

    </script>
}

@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
<script>
         $('button.close').click(function () {
             $(this).parents('#msg_pan').fadeOut('slow');
         });
    </script>
}