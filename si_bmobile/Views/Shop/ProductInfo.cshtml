@model si_bmobile.Models.all_products_model

@{
    ViewBag.Title = "Product Info";
    Layout = "~/Views/Shared/bm_Layout_Care.cshtml";
}


@if (Model.product != null)
{
    <div class="productinfo_pan">
        <div class="BreadCrumb" style="display: none;">
            <ul>
                <li>You are here:</li>
                <li><a href="/Shop/Products">Products</a></li>
                <li>>>&nbsp;@Model.product.Product_Name</li>
            </ul>
        </div>
        <div class="clr" style="height: 15px;"></div>
        <div class="title">@Model.product.Product_Name</div>
        <br />
        <div class="lpan">
            <div class="divimg">
                @*            <img id="ImgProduct" src="~/pro_images/@Model.product_img.img_medium" />
                    <input id="ImgLarge" type="hidden" value="~/pro_images/@Model.product_img.img_large" />*@
                <div class="clr"></div>
            </div>
        </div>

        <img id="zoom_01" src="~/pro_images/@Model.product_img.img_medium" data-zoom-image="~/pro_images/@Model.product_img.img_large" />

        <div class="rpan">
            <div>
                @Html.DisplayFor(model => model.product.Product_Name)
                @Html.Raw(Model.product.Product_Description)
                <br />
            </div>
            <div>
                <input id="pid" type="hidden" value="@Model.product.Product_ID" />
                <div id="btn-pan">
                    @*<input id="btnAddtoCart" type="button" value="Add to Cart" style="float:left;@ViewBag.acrt_pinfo" class="btn-addtocart" />&nbsp;*@
                    <input id="btnAddtoCart" type="button" value="Add to Cart" style="float:left;display:none;" class="btn-addtocart" />&nbsp;
                    @*<input type="button" value="Back" onclick="window.location.href='@Url.Action("Products", "Shop")    '" />*@
                </div>
                <div style="color: #AA0A85">
                    <b>Please check with nearest bmobile Retail Shop for availability</b><br>
                </div>
            </div>
        </div>
        <div class="clr"></div>
    </div>
}
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/elevatezoom/jquery-1.8.3.min.js")"></script>
<script type='text/javascript' src="@Url.Content("~/Scripts/elevatezoom/jquery.elevatezoom.js")"></script>
