@using MvcPaging
@model List<si_bmobile.Models.YPriceModel>
@{
    ViewBag.Title = "Your plan price";
    Layout = "~/Views/Shared/bm_Layout_Admin.cshtml";
}

<div class="divheader">
    YOUR PLAN PRICE
</div>

@using (Ajax.BeginForm("Yplan_price", "Admin",
                            new AjaxOptions { UpdateTargetId = "grid-list", HttpMethod = "get", LoadingElementId = "loading", OnBegin = "beginPaging", OnSuccess = "successPaging", OnFailure = "failurePaging" },
                            new { id = "frmyplans_price" }))
{

    <div class="dRowvlg dtopmenu">
        <span>@Html.ActionLink("Add New Plan Price", "Create_yplan_price")</span>

    </div>
    <div class="dRowvlg">
        <div class="input-append">
            @Html.TextBox("sPlanDenomination", "", new { placeholder = "Plan Denomination" })
          
  @Html.DropDownList("ddlType", new List<SelectListItem>(ViewBag.typeList), "--Select Plan Type--", new { @onchange="LoadPlans();" })
            @Html.DropDownList("ddlPlans",new List<SelectListItem>(), "--Select Plan--")
            @Html.DropDownList("ddlStatus", (IEnumerable<SelectListItem>)ViewBag.statusList, "--Select Status--")

            <button class="btn" type="submit">
                <i class="icon-search"></i>&nbsp;Search</button>
            <button class="btn" type="button" onclick="window.location.href='@Url.Action("Yplan_price", "Admin")'" >
                <i class="icon-search"></i>&nbsp;Reset</button>
        </div>

    </div>  

    <div id="grid-list">
        @{ Html.RenderPartial("_Ajax_Yplans_price", Model); }
    </div>  
    
    <div id="div_loading" class="div-btn" style="top: 50%;">
        <img src="~/images/slider/301.GIF" alt="Loading..." /><br />
        <span style="font-weight: bold; color: gray;">Please Wait...</span>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.min.js")" type="text/javascript"></script>

    @if (ViewBag.Message != null)
    { 
        <script type="text/javascript">
            $(document).ready(function () {
                $("#div_dialog").dialog({
                    title: "Message",
                    buttons: {
                        Close: function () {
                            $(this).dialog('close');
                            window.location.href = '@Url.Action("Yplan_price", "Admin")';
                        }
                    },
                    width: 350,
                    dialogClass: 'dialog_css',
                    autoOpen: true,
                    closeOnEscape: false,
                    draggable: false,
                    resizable: false,
                    modal: true
                });
            });
        </script>
    }
}

<script type="text/javascript">

    function beginPaging(args) {
        // Animate
        $('#grid-list').fadeOut('normal');
    }

    function successPaging() {
        // Animate
        $('#grid-list').fadeIn('normal');
        $('a').tooltip();
    }

    function failurePaging() {
        alert("Could not retrieve list.");
    }

</script>
 <script type="text/javascript">

     $(document).ready(function () {
         $("#ddlPlans").prop("disabled", true);
     });

     function LoadPlans() {

         var vplan_type_id = $("#ddlType option:selected").val();

         if (vplan_type_id != null && vplan_type_id != "") {
             $.post("/Admin/GetPlansbyTypeId",
               { plan_type_id: vplan_type_id },
                function (data) {
                    var result = $.parseJSON(data);
                    if (result.length > 0) {
                        $("#ddlPlans").empty();
                        $("#ddlPlans").prop("disabled", false);
                        $("#ddlPlans").append($("<option></option>").val("").html("-- Select Plan --"));
                        $.each(result, function (key, value) {
                            $("#ddlPlans").append($("<option></option>").val(value.Id).html(value.name));
                        });
                    }
                    else {
                        $("#ddlPlans").empty();
                        $("#ddlPlans").append($("<option></option>").val("").html("-- Select Plan --"));
                        $("#ddlPlans").prop("disabled", true);
                    }
                });
         }
         else {
             $("#ddlPlans").empty();
             $("#ddlPlans").append($("<option></option>").val("").html("-- Select Plan --"));
             $("#ddlPlans").prop("disabled", true);
         }

     }
        </script>

